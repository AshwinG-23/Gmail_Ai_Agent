{
  "manifest_version": 3,
  "name": "AI Email Agent - University Email Assistant",
  "version": "3.0.0",
  "description": "AI-powered email composition with personalized style analysis and autonomous workflow automation",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_simple.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Email Agent",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["ai-compose-modal.html", "styles.css"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}